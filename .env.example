# Security Configuration for All Services
# Copy this file to .env in each service directory and replace with actual values

# JWT Configuration - MUST be the same across all services
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_MIN_64_CHARS_REQUIRED_USE_OPENSSL_RAND_BASE64_64
REFRESH_SECRET=CHANGE_ME_DIFFERENT_SECRET_MIN_64_CHARS_OPENSSL_RAND_BASE64_64

# JWT Token Expiry
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=168h

# Service-to-Service Authentication - MUST be the same across all services
# Generate with: openssl rand -hex 32
SERVICE_API_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32_FOR_SECURE_KEY

# Rate Limiting Configuration
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=15m
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=1m

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017

# Service Ports (different for each service)
# users-service: PORT=8001
# content-service: PORT=8002
# notification-service: PORT=8003
PORT=8001

# =========================
# Shared Security
# =========================
JWT_SECRET=
REFRESH_SECRET=
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=168h
PASSWORD_MIN_AGE=0s
PASSWORD_MAX_AGE=1440h
PASSWORD_EXPIRY_LOCKOUT=10m
PASSWORD_RESET_TOKEN_EXPIRY=15m
SERVICE_API_KEY=
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=15m
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=1m

# =========================
# TLS (Dev: self-signed certs)
# =========================
TLS_ENABLED=true
TLS_CERT_FILE=/certs/tls.crt
TLS_KEY_FILE=/certs/tls.key

# =========================
# Database
# =========================
# Example (Docker): mongodb://mongo:27017
# Example (Local):  mongodb://localhost:27017
MONGO_URI=

# =========================
# Ports
# =========================
USERS_SERVICE_PORT=8001
CONTENT_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
API_GATEWAY_PORT=3000

# =========================
# Service URLs
# =========================
USERS_SERVICE_URL=http://users-service:8001
CONTENT_SERVICE_URL=http://content-service:8002
NOTIFICATIONS_SERVICE_URL=http://notification-service:8003

# If TLS is enabled for services, set these to https://
# USERS_SERVICE_URL=https://users-service:8001
# CONTENT_SERVICE_URL=https://content-service:8002
# NOTIFICATIONS_SERVICE_URL=https://notification-service:8003

# =========================
# Frontend (optional)
# =========================
# FRONTEND_PORT=3000
# FRONTEND_URL=http://localhost:5173

# =========================
# Dev bootstrap (optional)
# =========================
# If set, users-service will ensure an admin user exists on startup.
# BOOTSTRAP_ADMIN_EMAIL=admin@example.com
# BOOTSTRAP_ADMIN_PASSWORD=AdminP@ssw0rd2026!
# BOOTSTRAP_ADMIN_USERNAME=admin
# BOOTSTRAP_ADMIN_FIRST_NAME=Admin
# BOOTSTRAP_ADMIN_LAST_NAME=User

# Notification Service Environment Variables
# Copy this file to .env and replace with actual values

# JWT Configuration - MUST be the same across all services
JWT_SECRET=CHANGE_ME_MIN_64_CHARS_REQUIRED_USE_OPENSSL_RAND_BASE64_64

# Service-to-Service Authentication - MUST be the same across all services
SERVICE_API_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32_FOR_SECURE_KEY

# Rate Limiting Configuration
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=1m

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017

# Server Configuration
PORT=8003
